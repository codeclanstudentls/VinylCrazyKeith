<h1>Add Albums</h1>

<form action="/albums" method="post">
  <p>
    <label>
      Enter Album Title:
      <input type="text" name="title">
    </label>

    <label>
      Enter Genre:
      <input type="text" name="genre">
    </label>

    <label>
      Quantity:
      <input type="number" name="quantity">
    </label>

    <label>
      Buy Price:
      <input type="number" name="buy_price">
    </label>

    <label>
      Sell Price:
      <input type="number" name="sell_price">
    </label>
    <hr/>
    <p>
      Select an Artist:
    </p>

    <p>
      <label>
        <select name="artist_id">
          <% for artist in @artists %>
          <option value="<%= artist.id %>"><%= artist.name %></option>
          <% end %>
        </select>
      </label>
      <a href="/artists/new">Add Artist</a>
    </p> 

    <input type="submit" value="Add Album to Store">
  </p>

  <div class="centered">
  <img src="https://media.giphy.com/media/jXqYKr6zlFIru/giphy.gif" style="width:800px;height:600px;"/>
  </div>